@model Inventory.Models.CategoryDto
@{
    ViewData["Title"] = "Create Category";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-12">
        <div class="card mx-auto shadow p-3 my-3" style="width: 450px;">
            <div class="card-body">
                <form action="@Url.Action("Create", "Category")" method="post" enctype="multipart/form-data" class="d-flex flex-column gap-4">
                    <div class="form-group">
                        <label for="CategoryName">Category Name</label>
                        <input type="text" name="CategoryName" id="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="CategoryDesc">Description</label>
                        <input value="Description" type="text" name="CategoryDesc" id="CategoryDesc" class="form-control" />
                        <span asp-validation-for="CategoryDesc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="CategoryImage">Image</label>
                        <input type="file" name="CategoryImage" id="CategoryImage" class="form-control" onchange="previewImage(event)" accept="image/*" /> 
                        <img id="imagePreview" src="#" alt="Image Preview" class="img-fluid mt-3" style="display: none;" width="150"/>
                        <span asp-validation-for="CategoryImage" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex flex-row justify-content-end gap-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="submit" class="btn btn-primary" asp-controller="Category"
                            asp-action="Index">Cancel</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    
</script>
