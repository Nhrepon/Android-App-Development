@model Inventory.Models.ErrorViewModel

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h3>All products</h3>
        </div>
    </div>
    <hr/>
    <div class="row product">
        @{
            for (var i=0; i<10; i++)
            {
                <div class="col-sm-3">
                    <div class="card shadow my-3">
                        <img class="card-img" src="/images/image.jpg" />
                        <div class="card-body">
                            <a asp-action="Details" class="card-title text-black text-decoration-none"><h5 class="fs-6">Dell 15 Inch MacBook Air (2023) </h5></a>
                            <div class="card-text">Price: <del class="text-danger">$70.00</del> $50.00</div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RequestId" class="control-label"></label>
                <input asp-for="RequestId" class="form-control" />
                <span asp-validation-for="RequestId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ShowRequestId" /> @Html.DisplayNameFor(model => model.ShowRequestId)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

