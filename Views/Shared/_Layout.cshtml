<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory</title>

    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/toastify.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"> *@
</head>

<body>
    <header>
        @Html.Partial("_NavigationBar");
    </header>
    <div class="container-fluid">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>



    @* @RenderSection("Footer"); *@
    @* @{await Html.PartialAsync("Footer");} *@
    @* <footer class="container-fluid bg-success">
        <div class="footer-top">
            @Html.Partial("FooterTop")
        </div>
        <div class="container-fluid bottom-0">
            @Html.Partial("Footer")
        </div>
    </footer> *@

    <footer class="container-fluid bg-success bottom-0 position-absolute py-2">
        @Html.Partial("Footer")  
    </footer>


    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/toastify-js.js" asp-append-version="true"></script>
    <script src="~/js/axios.min.js" asp-append-version="true"></script>
    <script src="~/js/config.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
